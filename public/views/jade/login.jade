extends partials/layout

block content
	.main-content
		h1 #{title}
		br
		br
		h2.text-center.text-uppercase.jumbotron  #{title} form
		form( ng-controller="ValidateController", name="myForm", method="POST" )
			.form-group
				label User Name
				input.form-control( type="text", placeholder="User Name", ng-model="uname" ) 
			.form-group
				label Password
				input.form-control( type="password", placeholder="Password", ng-model="password" ) 
			.text-center
				button.btn.btn-info.btn-md.pull-center( type="submit") Login
				button.btn.btn-info.btn-md.pull-center.reset( type="reset") Reset

		// div(ng-show="message").jumbotron Thanks {{ uname }} for login into website.